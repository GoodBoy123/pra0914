<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backWhite</item>
        <item name="colorPrimaryDark">@color/topBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/topBlack</item>
    </style>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/color_red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/backWhite</item>
        <item name="colorPrimaryDark">@color/topBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/topBlack</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--从相册等选取相片，从这开始-->
    <style name="Smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Smile.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Smile.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="Animations" />
    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
    <!--从相册等选取相片，在这里结束-->

    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="pickerview_dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>

    <!--设置activity的切换动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <!--新的activity进入动画-->
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <!--activity没有finish时的退出动画，即旧的activity退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <!--上一个activity进入动画，即旧的activity进入动画-->
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <!--activity finish时的退出动画，即旧的activity退出动画-->
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>


    <!--设置一些公用的属性，方便统一修改-->
    <!--RecyclerView 的 card item 布局里的title TextView属性，在home,video,history模块均有用到-->
    <style name="recycler_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--RecyclerView 的 card item 布局里的date TextView属性，在home,video,history模块均有用到-->
    <style name="recycler_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableLeft">@drawable/icon_date</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--RecyclerView 的 card item 布局里的type|source TextView属性，在home,video,history模块均有用到-->
    <style name="recycler_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--dialog-->
    <style name="dialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
